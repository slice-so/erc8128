---
interface Props {
  title: string
  description: string
}

const { title, description } = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <!-- Primary Meta Tags -->
    <title>ERC-8128 | Ethereum HTTP Authentication Standard</title>
    <meta name="title" content="ERC-8128 | Ethereum HTTP Authentication Standard" />
    <meta
      name="description"
      content="ERC-8128 enables Ethereum accounts to sign and authenticate HTTP requests to any web service. No API keys, no signups—just your wallet."
    />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://slice.so/erc8128" />
    <meta property="og:title" content="ERC-8128 | Ethereum HTTP Authentication Standard" />
    <meta
      property="og:description"
      content="Authenticate HTTP requests with your Ethereum account. Sign API calls, webhooks, and web requests—no signups, no API keys required."
    />
    <meta property="og:image" content="https://slice.so/erc8128-og-image.png" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content="https://slice.so/erc8128" />
    <meta
      property="twitter:title"
      content="ERC-8128 | Ethereum HTTP Authentication Standard"
    />
    <meta
      property="twitter:description"
      content="Authenticate HTTP requests with your Ethereum account. Sign API calls, webhooks, and web requests—no signups, no API keys required."
    />
    <meta property="twitter:image" content="https://slice.so/erc8128-og-image.png" />

    <!-- Additional SEO -->
    <meta
      name="keywords"
      content="ERC-8128, Ethereum authentication, HTTP signatures, signed requests, web3 authentication, Ethereum standard, API authentication"
    />
    <link rel="canonical" href="https://slice.so/erc8128" />

    <!-- Schema.org Structured Data -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "TechArticle",
        "headline": "ERC-8128: Ethereum HTTP Authentication Standard",
        "description": "ERC-8128 enables Ethereum accounts to sign and authenticate HTTP requests to any web service without API keys or signups.",
        "keywords": "ERC-8128, Ethereum authentication, HTTP signatures, signed requests, web3",
        "author": {
          "@type": "Organization",
          "name": "Slice"
        },
        "publisher": {
          "@type": "Organization",
          "name": "Slice",
          "logo": {
            "@type": "ImageObject",
            "url": "https://slice.so/logo.png"
          }
        },
        "datePublished": "2024-01-15",
        "url": "https://slice.so/erc8128"
      }
    </script>

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <!-- Fonts (async to avoid render-blocking) -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      rel="preload"
      as="style"
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=JetBrains+Mono:wght@400;600&display=swap"
    />
    <link
      href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=JetBrains+Mono:wght@400;600&display=swap"
      rel="stylesheet"
      media="print"
      onload="this.media='all'"
    />
    <noscript>
      <link
        href="https://fonts.googleapis.com/css2?family=Cormorant+Garamond:wght@400;600&family=JetBrains+Mono:wght@400;600&display=swap"
        rel="stylesheet"
      />
    </noscript>
  </head>
  <body class="w-full min-h-screen flex flex-col">
    <slot />

    <!-- Toast for copy feedback -->
    <div class="toast" id="toast">Copied!</div>

    <!-- Scroll animation observer -->
    <script>
      const observer = new IntersectionObserver(
        (entries) => {
          entries.forEach((entry) => {
            if (entry.isIntersecting) {
              entry.target.classList.add("visible");
            }
          });
        },
        { threshold: 0.1, rootMargin: "0px 0px -40px 0px" }
      );

      document.querySelectorAll(".animate-in").forEach((el) => {
        observer.observe(el);
      });
    </script>
  </body>
</html>

<style is:global>
  @import "../styles/global.css";
</style>
