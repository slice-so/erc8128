---
const steps = [
  {
    num: "01",
    title: "Sign the Request",
    description:
      "Your wallet cryptographically signs the HTTP request details—method, URL, headers, body."
  },
  {
    num: "02",
    title: "Send with Signature",
    description:
      "The signed request is sent to any web service with your Ethereum address and signature attached."
  },
  {
    num: "03",
    title: "Server Verifies",
    description:
      "The server validates the signature against your address. Authentication complete—no account needed."
  }
]
---

<section class="how-it-works">
  <div class="how-it-works-bg"></div>
  <div class="how-it-works-inner">
    <h2 class="how-it-works-title animate-in">How ERC-8128 Works</h2>

    <div class="steps-grid stagger-children">
      <div class="steps-line"></div>
      {
        steps.map((step) => (
          <div class="step animate-in">
            <div class="step-circle">
              <span>{step.num}</span>
            </div>
            <div class="step-body">
              <h3>{step.title}</h3>
              <p>{step.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .how-it-works {
    border-bottom: 1px solid var(--border);
    padding: 5rem 1rem;
    position: relative;
    overflow: hidden;
  }

  @media (min-width: 768px) {
    .how-it-works {
      padding: 5rem 3rem;
    }
  }

  .how-it-works-bg {
    position: absolute;
    inset: 0;
    opacity: 0.1;
    pointer-events: none;
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
    background-size: 40px 40px;
  }

  .how-it-works-inner {
    max-width: 80rem;
    margin: 0 auto;
    position: relative;
    z-index: 10;
  }

  .how-it-works-title {
    font-size: clamp(2rem, 5vw, 3.5rem);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: -0.03em;
    margin-bottom: 5rem;
    text-align: center;
  }

  .steps-grid {
    position: relative;
    display: grid;
    grid-template-columns: 1fr;
    gap: 3rem;
  }

  @media (min-width: 768px) {
    .steps-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: 3rem;
    }
  }

  .steps-line {
    display: none;
  }

  @media (min-width: 768px) {
    .steps-line {
      display: block;
      position: absolute;
      top: 2rem;
      left: 0;
      width: 100%;
      height: 1px;
      background: rgba(255, 255, 255, 0.3);
      z-index: -1;
    }
  }

  .step {
    position: relative;
  }

  .step-circle {
    width: 4rem;
    height: 4rem;
    background: var(--bg);
    border: 1px solid var(--border);
    border-radius: 9999px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-bottom: 2rem;
    z-index: 10;
    position: relative;
    transition: all 0.3s ease;
  }

  .step:hover .step-circle {
    background: white;
    color: black;
  }

  .step-circle span {
    font-family: var(--mono);
    font-size: 1.25rem;
    font-weight: 700;
  }

  .step-body {
    border-left: 2px solid white;
    padding-left: 1rem;
  }

  @media (min-width: 768px) {
    .step-body {
      border-left: none;
      padding-left: 0;
    }
  }

  .step-body h3 {
    font-size: 1.125rem;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 0.75rem;
  }

  .step-body p {
    font-size: 1rem;
    opacity: 0.7;
    line-height: 1.7;
  }
</style>
