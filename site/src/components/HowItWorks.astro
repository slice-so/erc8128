---
const steps = [
  {
    num: "01",
    title: "Sign",
    description:
      "The client signs the request details—method, URL, headers, body—with their Ethereum identity."
  },
  {
    num: "02",
    title: "Send",
    description:
      "The signed request is sent with the Ethereum address and signature attached. No prior registration required."
  },
  {
    num: "03",
    title: "Verify",
    description:
      "The server recovers the signer's address and authenticates the request. Identity verified, zero handshake."
  }
]
---

<section class="border-b border-border py-20 px-4 md:py-20 md:px-12 relative overflow-hidden">
  <!-- Grid background -->
  <div class="absolute inset-0 opacity-10 pointer-events-none bg-grid"></div>
  
  <div class="max-w-7xl mx-auto relative z-10">
    <div class="mb-12">
      <div class="text-xl font-bold uppercase tracking-[0.15em] flex items-center gap-4">
        <span class="block w-4 h-4 bg-white"></span>
        Request Lifecycle
      </div>
    </div>

    <div class="relative grid grid-cols-1 md:grid-cols-3 gap-12 stagger-children">
      <!-- Connecting line (desktop only) -->
      <div class="hidden md:block absolute top-8 left-0 w-full h-px bg-white/30 -z-10"></div>
      
      {
        steps.map((step) => (
          <div class="relative animate-in group">
            <div class="w-16 h-16 bg-bg border border-border rounded-full flex items-center justify-center mb-8 z-10 relative transition-all duration-300 group-hover:bg-white group-hover:text-black">
              <span class="font-mono text-xl font-bold">{step.num}</span>
            </div>
            <div class="border-l-2 border-white pl-4 md:border-l-0 md:pl-0">
              <h3 class="text-lg font-bold uppercase mb-3">{step.title}</h3>
              <p class="text-base opacity-70 leading-[1.7]">{step.description}</p>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

<style>
  .bg-grid {
    background-image:
      linear-gradient(rgba(255, 255, 255, 0.1) 1px, transparent 1px),
      linear-gradient(90deg, rgba(255, 255, 255, 0.1) 1px, transparent 1px);
    background-size: 40px 40px;
  }
</style>
