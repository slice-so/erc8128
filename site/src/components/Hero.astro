<style>
  .hero {
    display: grid;
    grid-template-columns: 1fr;
    border-bottom: 1px solid var(--border);
    min-height: 85vh;
    position: relative;
  }

  @media (min-width: 768px) {
    .hero {
      grid-template-columns: 1fr auto;
    }
  }

  @media (min-width: 1024px) {
    .hero {
      grid-template-columns: 40% 60%;
    }
  }

  .hero-left {
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    position: relative;
    z-index: 2;
  }

  @media (min-width: 768px) {
    .hero-left {
      padding: 3rem;
    }
  }

  @media (min-width: 1024px) {
    .hero-left {
      padding: 4rem;
      border-right: 1px solid var(--border);
    }
  }

  .accent-bar {
    width: 120px;
    height: 6px;
    background: white;
    margin-bottom: 2rem;
    margin-top: 1rem;
  }

  @media (max-width: 767px) {
    .accent-bar {
      margin-top: 1.5rem;
    }
  }

  .accent-bar-bottom {
    margin-top: 2rem;
    margin-bottom: 0;
  }

  /* ── Hero CTAs (text-only style) ── */
  .hero-ctas {
    display: flex;
    flex-direction: column;
    gap: 1.25rem;
    margin-top: 2.5rem;
  }

  .hero-cta {
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    font-weight: 800;
    font-size: clamp(1.125rem, 2.5vw, 1.5rem);
    text-transform: uppercase;
    letter-spacing: 0.06em;
    text-decoration: none;
    transition: opacity 0.25s ease;
    line-height: 1;
  }

  .hero-cta:hover {
    opacity: 0.7;
  }

  .hero-cta-primary {
    color: white;
  }

  .hero-cta-secondary {
    color: rgba(255, 255, 255, 0.45);
  }

  .hero-cta-secondary:hover {
    color: rgba(255, 255, 255, 0.7);
    opacity: 1;
  }

  .cta-arrow {
    font-weight: 300;
    font-size: 1.3em;
    opacity: 0.8;
  }

  .hero-h1 {
    font-size: clamp(4rem, 10vw, 9rem);
    font-weight: 700;
    line-height: 0.9;
    letter-spacing: -0.04em;
    text-transform: uppercase;
  }

  .hero-subtitle {
    font-size: clamp(1.5rem, 3.5vw, 2.25rem);
    font-weight: 400;
    line-height: 1.25;
    opacity: 0.9;
    max-width: 28rem;
  }

  .hero-bottom {
    margin-top: 3rem;
  }

  @media (min-width: 1024px) {
    .hero-bottom {
      margin-top: 0;
    }
  }

  /* ── Globe: stays at hero level, fades on narrow screens ── */
  .hero-globe {
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    width: 55%;
    overflow: hidden;
    pointer-events: none;
    opacity: 0;
    transition: opacity 0.3s ease;
  }

  @media (min-width: 768px) {
    .hero-globe {
      position: relative;
      width: auto;
      opacity: 0.4;
      pointer-events: auto;
    }
  }

  @media (min-width: 1024px) {
    .hero-globe {
      opacity: 1;
    }
  }

  #dots {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
  }
</style>

<script>
  const canvas = document.getElementById('dots') as HTMLCanvasElement;
  const ctx = canvas.getContext('2d')!;

  let width = 0, height = 0;
  let dpr = 1;
  let angleX = 0.3;
  let angleY = 0;
  let targetAngleX = 0.3;
  let targetAngleY = 0;
  let autoRotateY = 0;
  let isDragging = false;
  let lastMouseX = 0;
  let lastMouseY = 0;
  let mouseX = -9999;
  let mouseY = -9999;
  let velocityX = 0;
  let velocityY = 0;

  function resize() {
    const parent = canvas.parentElement!;
    width = parent.offsetWidth;
    height = parent.offsetHeight;
    dpr = window.devicePixelRatio || 1;
    canvas.width = width * dpr;
    canvas.height = height * dpr;
    ctx.setTransform(dpr, 0, 0, dpr, 0, 0);
  }

  // Generate points on a sphere using Fibonacci distribution
  const NUM_POINTS = 200;
  const spherePoints: { x: number; y: number; z: number }[] = [];
  const goldenAngle = Math.PI * (3 - Math.sqrt(5));

  for (let i = 0; i < NUM_POINTS; i++) {
    const y = 1 - (i / (NUM_POINTS - 1)) * 2;
    const radius = Math.sqrt(1 - y * y);
    const theta = goldenAngle * i;
    spherePoints.push({
      x: Math.cos(theta) * radius,
      y: y,
      z: Math.sin(theta) * radius,
    });
  }

  // Connection distance threshold — tighter to reduce line count
  const CONNECTION_THRESHOLD = 0.45;

  // Pre-compute neighbor pairs (unit sphere distance)
  const pairs: [number, number][] = [];
  for (let i = 0; i < NUM_POINTS; i++) {
    for (let j = i + 1; j < NUM_POINTS; j++) {
      const dx = spherePoints[i].x - spherePoints[j].x;
      const dy = spherePoints[i].y - spherePoints[j].y;
      const dz = spherePoints[i].z - spherePoints[j].z;
      const dist = Math.sqrt(dx * dx + dy * dy + dz * dz);
      if (dist < CONNECTION_THRESHOLD) {
        pairs.push([i, j]);
      }
    }
  }

  // ── Pulsing lines (replace traveling dot pulses) ──
  // Each "pulse" lights up an entire connection line with accent color
  interface LinePulse {
    pairIdx: number;
    phase: number;      // 0→1 lifecycle
    speed: number;
    maxOpacity: number;
  }

  const linePulses: LinePulse[] = [];
  const MAX_LINE_PULSES = 18;

  function spawnLinePulse() {
    if (linePulses.length >= MAX_LINE_PULSES) return;
    const pairIdx = Math.floor(Math.random() * pairs.length);
    // Avoid duplicate on same pair
    if (linePulses.some(p => p.pairIdx === pairIdx)) return;
    linePulses.push({
      pairIdx,
      phase: 0,
      speed: 0.006 + Math.random() * 0.01,
      maxOpacity: 0.4 + Math.random() * 0.4,
    });
  }

  // Seed initial pulses
  for (let i = 0; i < 8; i++) spawnLinePulse();

  // Accent color for pulsing lines (deep blue-purple)
  const ACCENT_R = 120, ACCENT_G = 100, ACCENT_B = 255;

  // Mouse / touch interaction
  const heroGlobe = canvas.parentElement!;

  heroGlobe.addEventListener('mousedown', (e) => {
    isDragging = true;
    lastMouseX = e.clientX;
    lastMouseY = e.clientY;
    velocityX = 0;
    velocityY = 0;
  });

  window.addEventListener('mousemove', (e) => {
    const rect = heroGlobe.getBoundingClientRect();
    mouseX = e.clientX - rect.left;
    mouseY = e.clientY - rect.top;

    if (isDragging) {
      const dx = e.clientX - lastMouseX;
      const dy = e.clientY - lastMouseY;
      // ── Inverted drag direction (globe moves opposite to cursor) ──
      velocityY = -dx * 0.005;
      velocityX = -dy * 0.005;
      targetAngleY -= dx * 0.005;
      targetAngleX -= dy * 0.005;
      lastMouseX = e.clientX;
      lastMouseY = e.clientY;
    }
  });

  window.addEventListener('mouseup', () => {
    isDragging = false;
  });

  heroGlobe.addEventListener('mouseleave', () => {
    mouseX = -9999;
    mouseY = -9999;
  });

  // Touch support
  heroGlobe.addEventListener('touchstart', (e) => {
    isDragging = true;
    const t = e.touches[0];
    lastMouseX = t.clientX;
    lastMouseY = t.clientY;
    velocityX = 0;
    velocityY = 0;
  }, { passive: true });

  heroGlobe.addEventListener('touchmove', (e) => {
    const t = e.touches[0];
    const rect = heroGlobe.getBoundingClientRect();
    mouseX = t.clientX - rect.left;
    mouseY = t.clientY - rect.top;

    if (isDragging) {
      const dx = t.clientX - lastMouseX;
      const dy = t.clientY - lastMouseY;
      // ── Inverted drag direction ──
      velocityY = -dx * 0.005;
      velocityX = -dy * 0.005;
      targetAngleY -= dx * 0.005;
      targetAngleX -= dy * 0.005;
      lastMouseX = t.clientX;
      lastMouseY = t.clientY;
    }
  }, { passive: true });

  heroGlobe.addEventListener('touchend', () => {
    isDragging = false;
    mouseX = -9999;
    mouseY = -9999;
  });

  // Cursor style
  heroGlobe.style.cursor = 'grab';

  // Build a set of currently-pulsing pair indices for fast lookup
  const pulsingPairs = new Set<number>();

  let lastTime = 0;

  function draw(time: number) {
    const dt = lastTime ? Math.min((time - lastTime) / 16.67, 3) : 1;
    lastTime = time;

    if (!width || !height) {
      requestAnimationFrame(draw);
      return;
    }

    ctx.clearRect(0, 0, width, height);

    const cx = width / 2;
    const cy = height / 2;
    const sphereRadius = Math.min(width, height) * 0.38;
    const cursorRadius = sphereRadius * 0.35;

    // Auto-rotation (slow)
    if (!isDragging) {
      autoRotateY += 0.002 * dt;
      targetAngleY += velocityY * dt;
      targetAngleX += velocityX * dt;
      velocityX *= 0.96;
      velocityY *= 0.96;
    }

    // Smooth interpolation
    angleX += (targetAngleX - angleX) * 0.1 * dt;
    angleY += (targetAngleY - angleY) * 0.1 * dt;

    const totalAngleY = angleY + autoRotateY;

    const cosY = Math.cos(totalAngleY);
    const sinY = Math.sin(totalAngleY);
    const cosX = Math.cos(angleX);
    const sinX = Math.sin(angleX);

    // Project all points
    const projected: { px: number; py: number; z: number; idx: number }[] = [];

    for (let i = 0; i < spherePoints.length; i++) {
      const p = spherePoints[i];
      const x1 = p.x * cosY - p.z * sinY;
      const z1 = p.x * sinY + p.z * cosY;
      const y1 = p.y;
      const y2 = y1 * cosX - z1 * sinX;
      const z2 = y1 * sinX + z1 * cosX;

      projected.push({
        px: cx + x1 * sphereRadius,
        py: cy + y2 * sphereRadius,
        z: z2,
        idx: i,
      });
    }

    // ── Update pulsing lines ──
    pulsingPairs.clear();
    for (let pi = linePulses.length - 1; pi >= 0; pi--) {
      const lp = linePulses[pi];
      lp.phase += lp.speed * dt;
      if (lp.phase > 1) {
        linePulses.splice(pi, 1);
        continue;
      }
      pulsingPairs.add(lp.pairIdx);
    }

    // Spawn new line pulses periodically
    if (Math.random() < 0.05 * dt) spawnLinePulse();

    // ── Draw connections (lines) ──
    for (let pIdx = 0; pIdx < pairs.length; pIdx++) {
      const [i, j] = pairs[pIdx];
      const a = projected[i];
      const b = projected[j];

      const avgZ = (a.z + b.z) / 2;
      const depthFactor = (avgZ + 1) / 2;

      // Check if this line is pulsing
      let isPulsing = false;
      let pulseIntensity = 0;
      if (pulsingPairs.has(pIdx)) {
        const lp = linePulses.find(p => p.pairIdx === pIdx)!;
        isPulsing = true;
        // Bell curve: sin(π * phase)
        pulseIntensity = Math.sin(lp.phase * Math.PI) * lp.maxOpacity * depthFactor;
      }

      // Base line opacity — much lower than before
      const baseOpacity = 0.015 + depthFactor * 0.04;

      // Cursor proximity boost
      let cursorBoost = 0;
      const midX = (a.px + b.px) / 2;
      const midY = (a.py + b.py) / 2;
      const distToCursor = Math.sqrt(
        (midX - mouseX) ** 2 + (midY - mouseY) ** 2
      );
      if (distToCursor < cursorRadius) {
        cursorBoost = (1 - distToCursor / cursorRadius) * 0.1;
      }

      if (isPulsing && pulseIntensity > 0.01) {
        // Draw accent-colored pulsing line
        const r = Math.round(ACCENT_R + (255 - ACCENT_R) * 0.3);
        const g = Math.round(ACCENT_G + (255 - ACCENT_G) * 0.15);
        const b2 = ACCENT_B;
        ctx.strokeStyle = `rgba(${r}, ${g}, ${b2}, ${pulseIntensity})`;
        ctx.lineWidth = 1 + depthFactor * 1.5;
      } else {
        const finalOpacity = Math.min(baseOpacity + cursorBoost, 0.15);
        ctx.strokeStyle = `rgba(255, 255, 255, ${finalOpacity})`;
        ctx.lineWidth = 0.3 + depthFactor * 0.3;
      }

      ctx.beginPath();
      ctx.moveTo(a.px, a.py);
      ctx.lineTo(b.px, b.py);
      ctx.stroke();
    }

    // Sort by z for depth ordering (back to front) for dots
    const sortedProjected = [...projected].sort((a, b) => a.z - b.z);

    // Draw dots
    for (const pt of sortedProjected) {
      const depthFactor = (pt.z + 1) / 2;
      let opacity = 0.15 + depthFactor * 0.7;
      let dotSize = 1.5 + depthFactor * 2.5;

      // Cursor proximity effect
      const distToCursor = Math.sqrt(
        (pt.px - mouseX) ** 2 + (pt.py - mouseY) ** 2
      );
      if (distToCursor < cursorRadius) {
        const proximity = 1 - distToCursor / cursorRadius;
        dotSize += proximity * 3;
        opacity = Math.min(opacity + proximity * 0.4, 1);
      }

      ctx.fillStyle = `rgba(255, 255, 255, ${opacity})`;
      ctx.beginPath();
      ctx.arc(pt.px, pt.py, dotSize, 0, Math.PI * 2);
      ctx.fill();
    }

    requestAnimationFrame(draw);
  }

  window.addEventListener('resize', resize);
  setTimeout(() => { resize(); requestAnimationFrame(draw); }, 100);
</script>
