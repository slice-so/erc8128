<style>
  .hero-globe {
    cursor: grab;
    pointer-events: auto;
    position: absolute;
    top: 50%;
    --globe-size: clamp(400px, 70vh, 580px);
    width: var(--globe-size);
    height: var(--globe-size);
    /* Small screens: right edge aligned; large: centered in right panel */
    left: min(72.5%, calc(100% - (var(--globe-size) / 2)));
    transform: translate(-50%, -50%);
  }
</style>

<script>
  const canvas = document.getElementById('dots') as HTMLCanvasElement;
  const ctx = canvas.getContext('2d')!;

  let width = 0, height = 0;
  let dpr = 1;
  let angleX = 0.3;
  let angleY = 0;
  let targetAngleX = 0.3;
  let targetAngleY = 0;
  let autoRotateY = 0;
  let isDragging = false;
  let lastMouseX = 0;
  let lastMouseY = 0;
  let mouseX = -9999;
  let mouseY = -9999;
  let velocityX = 0;
  let velocityY = 0;

  function resize() {
    const parent = canvas.parentElement!;
    width = parent.offsetWidth;
    height = parent.offsetHeight;
    dpr = window.devicePixelRatio || 1;
    canvas.width = width * dpr;
    canvas.height = height * dpr;
    ctx.setTransform(dpr, 0, 0, dpr, 0, 0);
  }

  // ── Generate points on a sphere — Fibonacci distribution ──
  const NUM_POINTS = 280;
  const spherePoints: { x: number; y: number; z: number }[] = [];
  const goldenAngle = Math.PI * (3 - Math.sqrt(5));

  for (let i = 0; i < NUM_POINTS; i++) {
    const y = 1 - (i / (NUM_POINTS - 1)) * 2;
    const radius = Math.sqrt(1 - y * y);
    const theta = goldenAngle * i;
    spherePoints.push({
      x: Math.cos(theta) * radius,
      y: y,
      z: Math.sin(theta) * radius,
    });
  }

  const CONNECTION_THRESHOLD = 0.38;

  const pairs: [number, number][] = [];
  for (let i = 0; i < NUM_POINTS; i++) {
    for (let j = i + 1; j < NUM_POINTS; j++) {
      const dx = spherePoints[i].x - spherePoints[j].x;
      const dy = spherePoints[i].y - spherePoints[j].y;
      const dz = spherePoints[i].z - spherePoints[j].z;
      const dist = Math.sqrt(dx * dx + dy * dy + dz * dz);
      if (dist < CONNECTION_THRESHOLD) {
        pairs.push([i, j]);
      }
    }
  }

  const adjacency: number[][] = Array.from({ length: NUM_POINTS }, () => []);
  const pairByEdge = new Map<string, number>();
  for (let pIdx = 0; pIdx < pairs.length; pIdx++) {
    const [i, j] = pairs[pIdx];
    adjacency[i].push(j);
    adjacency[j].push(i);
    pairByEdge.set(`${i}-${j}`, pIdx);
    pairByEdge.set(`${j}-${i}`, pIdx);
  }

  interface TravelingSignal {
    path: number[];
    edgeIndices: number[];
    currentEdge: number;
    t: number;
    speed: number;
    tailLength: number;
    opacity: number;
  }

  const signals: TravelingSignal[] = [];
  const MAX_SIGNALS = 6;

  function findRandomPath(minHops: number, maxHops: number): number[] | null {
    const start = Math.floor(Math.random() * NUM_POINTS);
    const path = [start];
    const visited = new Set([start]);
    let current = start;

    const targetHops = minHops + Math.floor(Math.random() * (maxHops - minHops + 1));

    for (let step = 0; step < targetHops; step++) {
      const neighbors = adjacency[current].filter(n => !visited.has(n));
      if (neighbors.length === 0) break;
      const next = neighbors[Math.floor(Math.random() * neighbors.length)];
      path.push(next);
      visited.add(next);
      current = next;
    }

    return path.length >= minHops + 1 ? path : null;
  }

  function spawnSignal() {
    if (signals.length >= MAX_SIGNALS) return;

    const path = findRandomPath(3, 7);
    if (!path) return;

    const edgeIndices: number[] = [];
    for (let i = 0; i < path.length - 1; i++) {
      const key = `${path[i]}-${path[i + 1]}`;
      const altKey = `${path[i + 1]}-${path[i]}`;
      const pIdx = pairByEdge.get(key) ?? pairByEdge.get(altKey);
      if (pIdx === undefined) return;
      edgeIndices.push(pIdx);
    }

    signals.push({
      path,
      edgeIndices,
      currentEdge: 0,
      t: 0,
      speed: 0.012 + Math.random() * 0.012,
      tailLength: 2 + Math.floor(Math.random() * 2),
      opacity: 0.6 + Math.random() * 0.3,
    });
  }

  for (let i = 0; i < 4; i++) {
    spawnSignal();
    if (signals.length > 0) {
      const s = signals[signals.length - 1];
      const advanceEdges = Math.floor(Math.random() * Math.min(3, s.edgeIndices.length));
      s.currentEdge = advanceEdges;
      s.t = Math.random();
    }
  }

  interface EdgeGlow {
    intensity: number;
    isHead: boolean;
    headT: number;
    fromNode: number;
    toNode: number;
  }

  const edgeGlowMap = new Map<number, EdgeGlow>();

  const heroGlobe = canvas.parentElement!;

  heroGlobe.addEventListener('mousedown', (e) => {
    isDragging = true;
    lastMouseX = e.clientX;
    lastMouseY = e.clientY;
    velocityX = 0;
    velocityY = 0;
  });

  window.addEventListener('mousemove', (e) => {
    const rect = heroGlobe.getBoundingClientRect();
    mouseX = e.clientX - rect.left;
    mouseY = e.clientY - rect.top;

    if (isDragging) {
      const dx = e.clientX - lastMouseX;
      const dy = e.clientY - lastMouseY;
      velocityY = -dx * 0.005;
      velocityX = -dy * 0.005;
      targetAngleY -= dx * 0.005;
      targetAngleX -= dy * 0.005;
      lastMouseX = e.clientX;
      lastMouseY = e.clientY;
    }
  });

  window.addEventListener('mouseup', () => {
    isDragging = false;
  });

  heroGlobe.addEventListener('mouseleave', () => {
    mouseX = -9999;
    mouseY = -9999;
  });

  heroGlobe.addEventListener('touchstart', (e) => {
    isDragging = true;
    const t = e.touches[0];
    lastMouseX = t.clientX;
    lastMouseY = t.clientY;
    velocityX = 0;
    velocityY = 0;
  }, { passive: true });

  heroGlobe.addEventListener('touchmove', (e) => {
    const t = e.touches[0];
    const rect = heroGlobe.getBoundingClientRect();
    mouseX = t.clientX - rect.left;
    mouseY = t.clientY - rect.top;

    if (isDragging) {
      const dx = t.clientX - lastMouseX;
      const dy = t.clientY - lastMouseY;
      velocityY = -dx * 0.005;
      velocityX = -dy * 0.005;
      targetAngleY -= dx * 0.005;
      targetAngleX -= dy * 0.005;
      lastMouseX = t.clientX;
      lastMouseY = t.clientY;
    }
  }, { passive: true });

  heroGlobe.addEventListener('touchend', () => {
    isDragging = false;
    mouseX = -9999;
    mouseY = -9999;
  });

  function easeInOutCubic(t: number): number {
    return t < 0.5 ? 4 * t * t * t : 1 - Math.pow(-2 * t + 2, 3) / 2;
  }

  let lastTime = 0;

  function draw(time: number) {
    const dt = lastTime ? Math.min((time - lastTime) / 16.67, 3) : 1;
    lastTime = time;

    if (!width || !height) {
      requestAnimationFrame(draw);
      return;
    }

    ctx.clearRect(0, 0, width, height);

    const cx = width / 2;
    const cy = height / 2;
    const sphereRadius = Math.min(width, height) * 0.38;
    const cursorRadius = sphereRadius * 0.35;

    if (!isDragging) {
      autoRotateY += 0.0015 * dt;
      targetAngleY += velocityY * dt;
      targetAngleX += velocityX * dt;
      velocityX *= 0.96;
      velocityY *= 0.96;
    }

    angleX += (targetAngleX - angleX) * 0.1 * dt;
    angleY += (targetAngleY - angleY) * 0.1 * dt;

    const totalAngleY = angleY + autoRotateY;
    const cosY = Math.cos(totalAngleY);
    const sinY = Math.sin(totalAngleY);
    const cosX = Math.cos(angleX);
    const sinX = Math.sin(angleX);

    const projected: { px: number; py: number; z: number; idx: number }[] = [];

    for (let i = 0; i < spherePoints.length; i++) {
      const p = spherePoints[i];
      const x1 = p.x * cosY - p.z * sinY;
      const z1 = p.x * sinY + p.z * cosY;
      const y1 = p.y;
      const y2 = y1 * cosX - z1 * sinX;
      const z2 = y1 * sinX + z1 * cosX;

      projected.push({
        px: cx + x1 * sphereRadius,
        py: cy + y2 * sphereRadius,
        z: z2,
        idx: i,
      });
    }

    edgeGlowMap.clear();

    for (let si = signals.length - 1; si >= 0; si--) {
      const sig = signals[si];
      sig.t += sig.speed * dt;

      while (sig.t >= 1 && sig.currentEdge < sig.edgeIndices.length - 1) {
        sig.t -= 1;
        sig.currentEdge++;
      }

      if (sig.t >= 1 && sig.currentEdge >= sig.edgeIndices.length - 1) {
        signals.splice(si, 1);
        continue;
      }

      for (let tailOffset = 0; tailOffset <= sig.tailLength; tailOffset++) {
        const edgeIdx = sig.currentEdge - tailOffset;
        if (edgeIdx < 0) break;

        const pairIdx = sig.edgeIndices[edgeIdx];
        let intensity: number;
        if (tailOffset === 0) {
          intensity = sig.opacity;
        } else {
          const falloff = 1 - (tailOffset / (sig.tailLength + 1));
          intensity = sig.opacity * falloff * 0.6;
        }

        const existing = edgeGlowMap.get(pairIdx);
        if (!existing || existing.intensity < intensity) {
          edgeGlowMap.set(pairIdx, {
            intensity,
            isHead: tailOffset === 0,
            headT: tailOffset === 0 ? easeInOutCubic(sig.t) : -1,
            fromNode: sig.path[edgeIdx],
            toNode: sig.path[edgeIdx + 1],
          });
        }
      }
    }

    if (Math.random() < 0.02 * dt) spawnSignal();

    for (let pIdx = 0; pIdx < pairs.length; pIdx++) {
      const [i, j] = pairs[pIdx];
      const a = projected[i];
      const b = projected[j];

      const avgZ = (a.z + b.z) / 2;
      const depthFactor = (avgZ + 1) / 2;

      const baseOpacity = 0.04 + depthFactor * 0.08;

      let cursorBoost = 0;
      const midX = (a.px + b.px) / 2;
      const midY = (a.py + b.py) / 2;
      const distToCursor = Math.sqrt(
        (midX - mouseX) ** 2 + (midY - mouseY) ** 2
      );
      if (distToCursor < cursorRadius) {
        cursorBoost = (1 - distToCursor / cursorRadius) * 0.12;
      }

      const glow = edgeGlowMap.get(pIdx);

      if (glow && glow.intensity > 0.01) {
        const dimOpacity = Math.min(baseOpacity + cursorBoost, 0.2);
        ctx.strokeStyle = `rgba(255, 255, 255, ${dimOpacity})`;
        ctx.lineWidth = 0.5 + depthFactor * 0.5;
        ctx.beginPath();
        ctx.moveTo(a.px, a.py);
        ctx.lineTo(b.px, b.py);
        ctx.stroke();

        const fromPt = projected[glow.fromNode] || a;
        const toPt = projected[glow.toNode] || b;

        if (glow.isHead && glow.headT >= 0) {
          const glowIntensity = glow.intensity * depthFactor;
          const headX = fromPt.px + (toPt.px - fromPt.px) * glow.headT;
          const headY = fromPt.py + (toPt.py - fromPt.py) * glow.headT;

          const trailStart = Math.max(0, glow.headT - 0.4);
          const trailX = fromPt.px + (toPt.px - fromPt.px) * trailStart;
          const trailY = fromPt.py + (toPt.py - fromPt.py) * trailStart;

          const grad = ctx.createLinearGradient(trailX, trailY, headX, headY);
          grad.addColorStop(0, `rgba(255, 255, 255, 0)`);
          grad.addColorStop(0.7, `rgba(255, 255, 255, ${glowIntensity * 0.5})`);
          grad.addColorStop(1, `rgba(255, 255, 255, ${glowIntensity})`);

          ctx.strokeStyle = grad;
          ctx.lineWidth = 1.2 + depthFactor * 1.8;
          ctx.beginPath();
          ctx.moveTo(trailX, trailY);
          ctx.lineTo(headX, headY);
          ctx.stroke();

          const dotRadius = 1.5 + depthFactor * 2;
          ctx.fillStyle = `rgba(255, 255, 255, ${Math.min(glowIntensity * 1.2, 1)})`;
          ctx.beginPath();
          ctx.arc(headX, headY, dotRadius, 0, Math.PI * 2);
          ctx.fill();

          const haloGrad = ctx.createRadialGradient(headX, headY, 0, headX, headY, dotRadius * 4);
          haloGrad.addColorStop(0, `rgba(255, 255, 255, ${glowIntensity * 0.3})`);
          haloGrad.addColorStop(1, `rgba(255, 255, 255, 0)`);
          ctx.fillStyle = haloGrad;
          ctx.beginPath();
          ctx.arc(headX, headY, dotRadius * 4, 0, Math.PI * 2);
          ctx.fill();

        } else {
          const tailIntensity = glow.intensity * depthFactor;
          ctx.strokeStyle = `rgba(255, 255, 255, ${tailIntensity})`;
          ctx.lineWidth = 0.8 + depthFactor * 1.2;
          ctx.beginPath();
          ctx.moveTo(fromPt.px, fromPt.py);
          ctx.lineTo(toPt.px, toPt.py);
          ctx.stroke();
        }

      } else {
        const finalOpacity = Math.min(baseOpacity + cursorBoost, 0.2);
        ctx.strokeStyle = `rgba(255, 255, 255, ${finalOpacity})`;
        ctx.lineWidth = 0.5 + depthFactor * 0.5;
        ctx.beginPath();
        ctx.moveTo(a.px, a.py);
        ctx.lineTo(b.px, b.py);
        ctx.stroke();
      }
    }

    const sortedProjected = [...projected].sort((a, b) => a.z - b.z);

    for (const pt of sortedProjected) {
      const depthFactor = (pt.z + 1) / 2;
      let opacity = 0.15 + depthFactor * 0.7;
      let dotSize = 1.2 + depthFactor * 2;

      const distToCursor = Math.sqrt(
        (pt.px - mouseX) ** 2 + (pt.py - mouseY) ** 2
      );
      if (distToCursor < cursorRadius) {
        const proximity = 1 - distToCursor / cursorRadius;
        dotSize += proximity * 2.5;
        opacity = Math.min(opacity + proximity * 0.4, 1);
      }

      ctx.fillStyle = `rgba(255, 255, 255, ${opacity})`;
      ctx.beginPath();
      ctx.arc(pt.px, pt.py, dotSize, 0, Math.PI * 2);
      ctx.fill();
    }

    requestAnimationFrame(draw);
  }

  window.addEventListener('resize', resize);
  setTimeout(() => { resize(); requestAnimationFrame(draw); }, 100);
</script>
