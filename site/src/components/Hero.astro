  .hero-btn {
    display: inline-block;
    padding: 1rem 2rem;
    font-weight: 700;
    font-size: 0.9375rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    transition: all 0.3s ease;
    text-decoration: none;
    text-align: center;
  }

  .hero-btn-primary {
    background: white;
