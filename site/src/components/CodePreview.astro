<style>
  .code-section {
    padding-bottom: 60px;
  }

  .code-wrapper {
    position: relative;
  }

  .code-tabs {
    display: flex;
    gap: 0;
    margin-bottom: -1px;
    position: relative;
    z-index: 1;
  }

  .code-tab {
    padding: 10px 22px;
    font-family: var(--mono);
    font-size: 13px;
    color: var(--text-dim);
    background: transparent;
    border: 1px solid transparent;
    border-bottom: none;
    border-radius: var(--radius) var(--radius) 0 0;
    cursor: pointer;
    transition: all 0.25s var(--ease);
  }

  .code-tab:hover {
    color: var(--text);
  }

  .code-tab.active {
    color: var(--text);
    background: var(--code-bg);
    border-color: var(--border);
  }

  .code-block {
    background: var(--code-bg);
    border: 1px solid var(--border);
    border-radius: 0 var(--radius) var(--radius) var(--radius);
    padding: 28px;
    overflow-x: auto;
    display: none;
    animation: fadeIn 0.3s var(--ease);
  }

  .code-block.active {
    display: block;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(4px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .code-block pre {
    font-family: var(--mono);
    font-size: 13px;
    line-height: 1.75;
    color: var(--text-dim);
  }

  .code-block :global(.kw) { color: #c084fc; }
  .code-block :global(.fn) { color: #60a5fa; }
  .code-block :global(.str) { color: #34d399; }
  .code-block :global(.cm) { color: #4a4a50; }
  .code-block :global(.ty) { color: #f472b6; }
  .code-block :global(.num) { color: #fbbf24; }

  .install-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    background: var(--code-bg);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    padding: 18px 22px;
    margin-top: 20px;
    font-family: var(--mono);
    font-size: 14px;
    transition: border-color 0.3s var(--ease);
  }

  .install-bar:hover {
    border-color: var(--accent-border);
  }

  .install-bar code {
    color: var(--text-dim);
  }

  .install-prefix {
    color: var(--accent);
    margin-right: 8px;
  }

  .copy-btn {
    background: none;
    border: none;
    color: var(--text-dim);
    cursor: pointer;
    padding: 6px;
    border-radius: 6px;
    transition: all 0.25s var(--ease);
    font-size: 14px;
    display: flex;
    align-items: center;
  }
  .copy-btn:hover {
    color: var(--accent);
    background: var(--accent-dim);
  }
</style>

<script>
  // Code tab switching with smooth transition
  document.querySelectorAll(".code-tab").forEach((tab) => {
    tab.addEventListener("click", () => {
      const target = tab.getAttribute("data-tab");
      document.querySelectorAll(".code-tab").forEach((t) => {
        t.classList.toggle("active", t.getAttribute("data-tab") === target);
      });
      document.querySelectorAll(".code-block").forEach((b) => {
        const isTarget = b.getAttribute("data-tab") === target;
        b.classList.toggle("active", isTarget);
        // Re-trigger animation
        if (isTarget) {
          b.style.animation = "none";
          b.offsetHeight; // trigger reflow
          b.style.animation = "";
        }
      });
    });
  });

  // Copy install command with toast
  document.querySelector(".copy-btn")?.addEventListener("click", () => {
    navigator.clipboard.writeText("npm install @slicekit/erc8128");
    const toast = document.getElementById("toast");
    if (toast) {
      toast.classList.add("show");
      setTimeout(() => toast.classList.remove("show"), 2000);
    }
    // Also update button icon briefly
    const btn = document.querySelector(".copy-btn");
    if (btn) {
      const originalHTML = btn.innerHTML;
      btn.innerHTML = `<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="#858AFF" stroke-width="2.5"><polyline points="20 6 9 17 4 12"/></svg>`;
      setTimeout(() => { btn.innerHTML = originalHTML; }, 2000);
    }
  });
</script>
