---
const resources = [
  {
    href: "https://erc8128-docs.vercel.app/",
    label: "DOCUMENTATION",
    title: "Guides & References",
    desc: "Complete security model and API reference for signing and verifying requests."
  },
  {
    href: "https://github.com/slice-so/erc8128",
    label: "GITHUB LIBRARY",
    title: "Open Source SDK",
    desc: "TypeScript implementation with full test coverage and server middleware."
  },
  {
    href: "https://t.me/ethhttpmessagesignatures",
    label: "COMMUNITY",
    title: "Telegram Group",
    desc: "Join developers building with ERC8128—ask questions, share implementations."
  },
  {
    href: "https://ethereum-magicians.org/t/erc-8128-signed-http-requests-with-ethereum/27515",
    label: "DISCUSSION",
    title: "Ethereum Magicians",
    desc: "Participate in standard development and protocol-level discussion."
  }
]
---

<section class="resources">
  {
    resources.map((r, i) => (
      <a
        href={r.href}
        class={`resource-cell ${i < resources.length - 1 ? 'resource-cell-border' : ''}`}
        target="_blank"
        rel="noopener noreferrer"
      >
        <div class="resource-label">{r.label}</div>
        <div class="resource-title">{r.title}</div>
        <p>{r.desc}</p>
        <div class="resource-arrow">→</div>
      </a>
    ))
  }
</section>

<style>
  .resources {
    display: grid;
    grid-template-columns: 1fr;
    border-bottom: 1px solid var(--border);
    font-size: 0.875rem;
  }

  @media (min-width: 768px) {
    .resources {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .resources {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .resource-cell {
    display: block;
    padding: 2.5rem;
    color: var(--text);
    border-bottom: 1px solid var(--border);
    transition: background 0.3s ease;
    text-decoration: none;
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    .resource-cell:nth-child(odd) {
      border-right: 1px solid var(--border);
    }
    .resource-cell:nth-child(3),
    .resource-cell:nth-child(4) {
      border-bottom: none;
    }
  }

  @media (min-width: 1024px) {
    .resource-cell {
      border-bottom: none;
    }

    .resource-cell-border {
      border-right: 1px solid var(--border);
    }
  }

  .resource-cell:last-child {
    border-bottom: none;
  }

  .resource-cell:hover {
    background: var(--surface-elevated);
    opacity: 1;
  }

  .resource-label {
    font-family: var(--mono);
    font-size: 0.75rem;
    opacity: 0.5;
    margin-bottom: 1.5rem;
    transition: color 0.3s ease;
  }

  .resource-cell:hover .resource-label {
    color: white;
    opacity: 1;
  }

  .resource-title {
    font-size: 1.25rem;
    font-weight: 700;
    margin-bottom: 0.75rem;
  }

  p {
    opacity: 0.6;
    line-height: 1.6;
  }

  .resource-arrow {
    margin-top: 2rem;
    font-size: 1.125rem;
    opacity: 1;
  }
</style>
