---
const features = [
  {
    title: "Request Integrity",
    description:
      "Signatures cryptographically bind to the HTTP request itself. Any tampering with method, path, query, or body causes verification to fail immediately.",
    icon: "shield"
  },
  {
    title: "Eliminate API Keys",
    description:
      "Stop issuing, rotating, and securing API keys. Clients sign requests directly with EOAs or Smart Contract Accountsâ€”no server-issued credentials required.",
    icon: "key-off"
  },
  {
    title: "Onchain Identity",
    description:
      "Use ERC-1271 for smart contract authorization. Enable delegation, session modules, and composable access policies without changing your authentication layer.",
    icon: "ethereum"
  },
  {
    title: "Standards Based",
    description:
      "Built on RFC 9421 (HTTP Message Signatures) with replay protection. Every compliant client can authenticate with every compliant server.",
    icon: "document"
  }
]
---

<section class="features">
  {
    features.map((feature, i) => (
      <div class={`feature-cell ${i < features.length - 1 ? 'feature-cell-border' : ''}`}>
        <div class="feature-icon">
          {feature.icon === "shield" && (
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" role="img" aria-label="Cryptographic signature verification shield">
              <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
              <path d="M9 12l2 2 4-4"/>
            </svg>
          )}
          {feature.icon === "key-off" && (
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" role="img" aria-label="No API keys or tokens required">
              <path d="M21 2l-2 2m-7.61 7.61a5.5 5.5 0 1 1-7.778 7.778 5.5 5.5 0 0 1 7.777-7.777zm0 0L15.5 7.5m0 0l3 3L22 7l-3-3m-3.5 3.5L19 4"/>
              <line x1="2" y1="2" x2="22" y2="22" stroke-width="2"/>
            </svg>
          )}
          {feature.icon === "ethereum" && (
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" role="img" aria-label="Ethereum wallet-based authentication">
              <polygon points="12,2 4,12 12,16 20,12"/>
              <polygon points="4,12 12,22 20,12 12,16"/>
              <line x1="12" y1="2" x2="12" y2="16"/>
            </svg>
          )}
          {feature.icon === "document" && (
            <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" role="img" aria-label="Built on RFC 9421 and ERC-1271 standards">
              <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
              <polyline points="14 2 14 8 20 8"/>
              <line x1="16" y1="13" x2="8" y2="13"/>
              <line x1="16" y1="17" x2="8" y2="17"/>
              <polyline points="10 9 9 9 8 9"/>
            </svg>
          )}
        </div>
        <h3>{feature.title}</h3>
        <p>{feature.description}</p>
      </div>
    ))
  }
</section>

<style>
  .features {
    display: grid;
    grid-template-columns: 1fr;
    border-bottom: 1px solid var(--border);
  }

  @media (min-width: 768px) {
    .features {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  @media (min-width: 1024px) {
    .features {
      grid-template-columns: repeat(4, 1fr);
    }
  }

  .feature-cell {
    padding: 2.5rem 2rem;
    display: flex;
    flex-direction: column;
    height: 100%;
    border-bottom: 1px solid var(--border);
    transition: background 0.3s ease;
  }

  @media (min-width: 1024px) {
    .feature-cell {
      padding: 3.5rem 3rem;
      border-bottom: none;
    }

    .feature-cell-border {
      border-right: 1px solid var(--border);
    }
  }

  @media (min-width: 768px) and (max-width: 1023px) {
    .feature-cell:nth-child(odd) {
      border-right: 1px solid var(--border);
    }
    .feature-cell:nth-child(3),
    .feature-cell:nth-child(4) {
      border-bottom: none;
    }
  }

  .feature-cell:last-child {
    border-bottom: none;
  }

  .feature-cell:hover {
    background: var(--surface-elevated);
  }

  .feature-icon {
    margin-bottom: 2rem;
    opacity: 0.35;
    transition: opacity 0.3s ease;
    color: white;
  }

  .feature-icon svg {
    display: block;
  }

  .feature-cell:hover .feature-icon {
    opacity: 1;
  }

  h3 {
    font-size: 1.25rem;
    font-weight: 700;
    text-transform: uppercase;
    margin-bottom: 1rem;
  }

  p {
    font-size: 1rem;
    opacity: 0.7;
    line-height: 1.7;
  }
</style>
